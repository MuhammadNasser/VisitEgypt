<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_background_item"
    android:paddingBottom="@dimen/menu_item_pading"
    android:paddingTop="@dimen/menu_item_pading"
    android:tag="layout">

    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:contentDescription="@null" />

    <com.visit_egypt.visitegypt.widgets.TextViewRobotoRegular
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/imageViewIcon"
        android:layout_toRightOf="@+id/imageViewIcon"
        android:text="@string/app_name"
        android:textColor="@drawable/selector_drawer_list_item"
        android:textSize="@dimen/textSizeNormal"
        android:textStyle="bold" />
</RelativeLayout>